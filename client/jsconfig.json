{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "lib": [
            "ES2022",
            "dom"
        ],
    "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}